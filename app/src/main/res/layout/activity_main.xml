<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dhivakar.mysamples.MainActivity">

    <Button
        android:id="@+id/BtnLaunchNotifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:text="@string/launch_notifications"
        app:layout_constraintTop_toBottomOf="parent"/>

    <Button
        android:id="@+id/BtnLaunchOrientations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:text="@string/launch_orientations"
        app:layout_constraintTop_toBottomOf="@id/BtnLaunchNotifications"/>

    <Button
        android:id="@+id/BtnLaunchExternalApps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:text="@string/launch_externalapps"
        app:layout_constraintTop_toBottomOf="@id/BtnLaunchOrientations"/>

    <TextView
        android:id="@+id/orientation_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text=""
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>
