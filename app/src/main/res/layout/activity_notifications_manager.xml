<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".notifications.NotificationsManager">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Show Basic Notification"
                    android:id="@+id/buttonNotificationBasic"
                    android:onClick="onClick"
                    android:layout_weight="1"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Show Large Icon Notification"
                    android:id="@+id/buttonNotificationLargeIcon"
                    android:onClick="onClick"
                    android:layout_weight="1"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Show User Icon Notification"
                    android:id="@+id/buttonNotificationUserIcon"
                    android:onClick="onClick"
                    android:layout_weight="1"/>

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Show Big Text Notification"
                android:id="@+id/buttonNotificationBigText"
                android:onClick="onClick"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Show Inbox Style Notification"
                    android:id="@+id/buttonNotificationInboxStyle"
                    android:onClick="onClick"
                    android:layout_weight="1"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Show Big Picture Notification"
                    android:id="@+id/buttonNotificationBigPicture"
                    android:onClick="onClick"
                    android:layout_weight="1"/>

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Show Progress Notification"
                android:id="@+id/buttonNotificationProgress"
                android:onClick="onClick"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Show Actions Notification"
                android:id="@+id/buttonNotificationActions"
                android:onClick="onClick"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Show On-Going Notification"
                    android:id="@+id/buttonNotificationOnGoing"
                    android:onClick="onClick"
                    android:layout_weight="1"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Disable When in Notification"
                    android:id="@+id/buttonNotificationDisableWhen"
                    android:onClick="onClick"
                    android:layout_weight="1"/>

            </LinearLayout>

            <!--

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Show Basci Notification"
                android:id="@+id/buttonNotificationBasic"
                android:onClick="onClick"/-->


        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
