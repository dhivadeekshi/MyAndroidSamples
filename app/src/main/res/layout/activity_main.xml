<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dhivakar.mysamples.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5sp">
        <Button
            android:id="@+id/BtnLaunchNotifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/launch_notifications"/>

        <Button
            android:id="@+id/BtnLaunchOrientations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/launch_orientations"/>

        <Button
            android:id="@+id/BtnLaunchExternalApps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/launch_externalapps"/>

        <Button
            android:id="@+id/BtnLaunchGPGSAchievements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/launch_gpgsachievements"/>


        <TextView
            android:id="@+id/orientation_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text=""
            android:textAlignment="center" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
